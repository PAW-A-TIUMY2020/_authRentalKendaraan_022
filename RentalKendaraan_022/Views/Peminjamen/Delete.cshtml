@model RentalKendaraan_022.Models.Peminjaman

@{
    ViewData["Title"] = "Delete";
}

<h2>Hapus Data Peminjaman</h2>

<h3>Apakah anda yakin ingin menghapus data ini?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tanggal Peminjaman
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TglPeminjaman)
        </dd>
        <dt>
            Biaya
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Biaya)
        </dd>
        <dt>
            Customer
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdCustomerNavigation.NamaCustomer)
        </dd>
        <dt>
            Jaminan
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdJaminanNavigation.NamaJaminan)
        </dd>
        <dt>
            Kendaraan
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdKendaraanNavigation.NamaKendaraan)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPeminjaman" />
        <input type="submit" value="Hapus" class="btn btn-default" /> |
        <a asp-action="Index">Kembali</a>
    </form>
</div>
